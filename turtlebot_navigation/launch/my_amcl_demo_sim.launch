<launch>

  <!-- Map server -->
  <arg name="map_file" default="/datos/bamboo_ros_ws/maps/oficina.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <arg name="initial_pose_x" default="0.0"/> <!-- Use 17.0 for willow's map in simulation -->
  <arg name="initial_pose_y" default="0.0"/> <!-- Use 17.0 for willow's map in simulation -->
  <arg name="initial_pose_a" default="0.0"/>
  <arg name="initial_cov_xx" default="25.0"/> <!-- 5*5 --> 
  <arg name="initial_cov_yy" default="25.0"/> 
  <arg name="initial_cov_aa" default="6.2832"/>

  <include file="$(find turtlebot_navigation)/launch/includes/my_amcl.launch.xml">
    <arg name="initial_pose_x" value="$(arg initial_pose_x)"/>
    <arg name="initial_pose_y" value="$(arg initial_pose_y)"/>
    <arg name="initial_pose_a" value="$(arg initial_pose_a)"/>
    <arg name="initial_cov_xx" value="$(arg initial_pose_x)"/>
    <arg name="initial_cov_yy" value="$(arg initial_pose_y)"/>
    <arg name="initial_cov_aa" value="$(arg initial_pose_a)"/>
  </include>

  <include file="$(find turtlebot_navigation)/launch/includes/move_base.launch.xml"/>

</launch>

